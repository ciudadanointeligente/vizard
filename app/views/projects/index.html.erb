<h3>Projects</h3>

<div class="addNew">
  <%= link_to new_project_path, class: 'btn btn-default' do %>
      <i class="fa fa-plus-square-o"></i> New Project
  <% end %>
</div>

<div role="tabpanel">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#private" aria-controls="private" role="tab" data-toggle="tab">Private</a>
    </li>
    <li role="presentation">
      <a href="#public" aria-controls="public" role="tab" data-toggle="tab">Public</a>
    </li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="private">
      <table id="private_projects" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>id</th>
            <th>Project</th>
            <th>Description</th>
            
            <th class="text-center">Public</th>
            <th>Last update</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% @projects.each do | p | %>
            <tr>
                <td><%= p.id %></td>
                <td>
                  <%= link_to p do %>
                    <%= p.title %></a>
                  <% end %>
                </td>

                <td><%= p.description %></td>
                <td class="text-center">
                  <% if(p.public?) %>
                    <i class="fa fa-globe" title="Public"></i>
                  <% end %>
                </td>
                <td><%= p.updated_at %></td>
                <td class="text-right actions">
                  <%= link_to edit_project_path(p) do %>
                      <i class="fa fa-edit" title="Edit"></i>
                  <% end %>
                  <%= link_to p, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this project?' } do %>
                    <i class="fa fa-trash" title="Delete"></i>
                  <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>

    <div role="tabpanel" class="tab-pane" id="public">
      <table id="public_projects" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Last update</th>
          </tr>
        </thead>
        <tbody>
              <tr>
                <td>1</td>
                <td><a href="#">Project 1</a></td>
                <td>Prety Project</td>
                <td>2015-03-05 13:02:30 UTC</td>
              </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
    $('#private_projects').DataTable({
        "dom": '<"toolbar">frtip',
        "pagingType": "simple_numbers"
    } );
    $('#public_projects').DataTable({
        "dom": '<"toolbar">frtip'
    } );
});

</script>
